<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1>My tasks</h1>
  </div>
 <ul class="list-group">
    <% @tasks.each do |task| %>
      <li class="list-group-item">
        <% if task.completed == false %>
       <i class="fa-regular fa-square"></i>
        <% else %>
         <i class="fa-regular fa-square-check"></i>
        <% end %>
        <%= link_to task.title, task_path(task), class: 'text-decoration-none' %>
        <%= link_to 'Delete', task_path(task), data: { turbo_method: :delete, turbo_confirm: "Remove #{task.title}?" }, class: 'btn btn-secondary' %>
      </li>
    <% end %>
  </ul>
 <hr>
  <%= link_to '+ Add a task', new_task_path, class: 'text-decoration-none text-secondary' %>
</div>
